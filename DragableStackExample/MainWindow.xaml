<Window x:Class="DragableStackExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DragableStackExample"
        xmlns:ds="clr-namespace:DragableStack;assembly=DragableStack"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ds:DragableStack>
            <Button Content="button 1" Margin="5"  HorizontalAlignment="Center" Height="50" Width="200"  Click="Button_Click"/>
            <Button Content="button 2"  Margin="5"  HorizontalAlignment="Center" Height="50" Width="200"  Click="Button_Click"/>
            <Button Content="button 3"   Margin="5" HorizontalAlignment="Center" Height="50" Width="200" Click="Button_Click"/>
            <Button Content="button 4"   Margin="5" HorizontalAlignment="Center" Height="50" Width="200"  Click="Button_Click"/>
            <Button Content="button 5"   Margin="5" HorizontalAlignment="Center" Height="50" Width="200"  Click="Button_Click"/>
        </ds:DragableStack>
    </Grid>
</Window>
